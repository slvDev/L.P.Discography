@model L.P.Discography.Models.Album[]

@{
    ViewBag.Title = "Albums";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    @foreach (var album in Model)
    {
        <div class="col-md-3">
            <h4>@Html.ActionLink(album.AlbumTitle, "Detail", new { id = album.Id })</h4>
            <a href="@Url.Action("Detail", new { id = album.Id })">
                <img src="/Images/@album.CoverImageFileName"
                     alt="@album.AlbumTitle"
                     class="img-responsive" /></a>
        </div>
    }
    </div>

